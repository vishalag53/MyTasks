<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/log_in_graph"
    app:startDestination="@id/logInStartFragment">

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.vishalag53.mytasks.login.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" />
    <fragment
        android:id="@+id/logInStartFragment"
        android:name="com.vishalag53.mytasks.login.LogInStartFragment"
        android:label="fragment_log_in_start"
        tools:layout="@layout/fragment_log_in_start" >
        <action
            android:id="@+id/action_logInStartFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_logInStartFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />

    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.vishalag53.mytasks.login.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" />
</navigation>