<resources>
    <style name="Theme.MyTasks" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="Theme.Tasks" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="NoEditTextBorder" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
    </style>

    <style name="white_black">
        <item name="android:background">@color/white</item>
    </style>

<!--    Repeat Layout                         -->

    <style name="textRepeat">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="arrowDrop">
        <item name="android:src">@drawable/baseline_arrow_drop_down_24_day</item>
        <item name="android:layout_marginStart">2dp</item>
    </style>

    <style name="days">
        <item name="android:background">@drawable/weeks_rounded_btn_day</item>
        <item name="android:textColor">#757575</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="imageBtn">
        <item name="android:src">@drawable/baseline_add_40</item>
        <item name="android:background">@drawable/rounded_rect</item>
    </style>

    <style name="completedTextView">
        <item name="android:textColor">@color/lavender</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="listImage">
        <item name="android:src">@drawable/baseline_format_list_bulleted_24_day</item>
    </style>

    <style name="dialogBox">
        <item name="android:background">@drawable/dialog_box_bg_day</item>
    </style>

    <style name="dialogBoxEdittext">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dialogCL">
        <item name="android:background">@drawable/rounded_rect_day_white</item>
    </style>

    <style name="clBkg">
        <item name="android:background">@drawable/rounded_bg</item>
    </style>

    <style name="white_other">
        <item name="android:background">@color/white</item>
    </style>

</resources>